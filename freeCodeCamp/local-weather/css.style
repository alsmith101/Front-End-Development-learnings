.rays {
  position:absolute;
  display:block;
  left:40%;
  top:-50%;
  background:yellow;
  border-radius:1em;
  height: 2.5em;
  width:0.2em;
  
}

.rays1 {
  position:absolute;
  display:block;
  left:-13%;
  top:-30%;
  background:yellow;
  height: 2.5em;
  width:0.2em;
  border-radius:1em;
  transform: rotate(-45deg)
}

.rays:before  {
  content: '';
  position: absolute;
  background:yellow;
  top: 0em;
  left:0em;
  height: 3em;
  width:0.2em;
  border-radius:1em;
  display:block;
  transform-origin: 0.9em 125%;
  transform: rotate(60deg);
}
.rays:after {
  content: '';
  position: absolute;
  left:0em;
  top:0em;
  background:yellow;
  height: 3em;
  width:0.2em;
  border-radius:1em;
  display:block;
  transform-origin: -0.1em 125%;
  transform: rotate(240deg);
}
.rays:before {
  transform: rotate(60deg);
}


