body {
  background-color: #161616;
  font-family: 'Roboto', sans-serif;
  text-align: center;
}

h1 {
  text-transform: uppercase;
  font-weight: 100;
  font-size: 1.9em;
  margin-bottom: 1em;
  color:#fff;
}
span {
  text-transform:none;
}

.icon {
  color:#161616;
  height: 11em;
  width: 20em;
  display:block;
  position:relative;
  margin:auto;
  margin-top:0.5em;
}

.cloud {
  position: absolute;
  z-index:1;
  top: 30%;
  left:40%;
  width: 4.6875em;
  height: 4.8875em;
  background: #161616;
  border-radius: 50%;
  box-shadow:
    -2.6875em 0.90875em 0 -0.875em,
    2.625em 0.7575em 0 -0.7175em,
    0 0 0 0.495em #fff,
    -2.6875em 0.8875em 0 -0.325em #fff,
    2.5625em 0.805em 0 -0.20em #fff;
}

.currentTemp {
  color:white;
  font-size:35px;
  position:absolute;
  display:inline-block;
  top:20%;
  left:25%
}
.units{
  color:blue;
  position:absolute;
  display:inline-block;
  top:20%;
  left:54%
}
.weatherDesc{
  color:white;
  height:auto;
  position:relative;
  top:45%;
}
.cloud:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: -0.5em;
  display: block;
  width: 5.525em;
  height: 0em;
  background: #161616;
  box-shadow: 0 0.6475em 0 -0.0625em #fff;
}

.black_cloud {
  position:absolute;
  z-index:0;
  background:grey;
  opacity:0.3;
  height: 3.5em;
  width: 3.5em;
  right: 22%;
  top:20%;
  box-shadow:
    -1.775em 0.675em 0 -0.775em grey,
     1.775em 0.85em 0 -0.775em grey,
    0 0 0 0.255em grey,
    -1.775em 0.675em 0 -0.3375em grey,
    1.675em 0.68em 0 -0.3375em grey;
  border-radius: 50%
}

.black_cloud:after{
  
  height:14px;
  width:4em;
  background:grey;
  display:block;
  box-shadow: 0 0.6475em 0 -0.0625em grey;
  content: '';
  bottom: 0.25em;
  left:-0.5em;
  position:absolute;
  
}

